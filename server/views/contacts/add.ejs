<%- include ../partials/main_nav.ejs %>
<main class="container">
<div class="row">
    <h1><%= title%></h1>
    <form class="form" method="POST">
        <div class="form-group">
          <label for="username">Username </label>
          <input type="text" class="form-control" id="nameTextField"  placeholder="Add a contact name "
           name="username"required>
        </div>
        <div class="form-group">
            <label for="password">password </label>
            <input type="text" class="form-control" id="passwordTextField"  placeholder="Add a new password "
             name="password"required>
          </div>
          <div class="form-group">
            <label for="E-mail">E-mail</label>
            <input type="text" class="form-control" id="emailTextField"  placeholder="Add a new E-mail"
             name="email"required>
          </div>
        
        <button type="submit" class="btn btn-primary"><i class="fas fa-edit"></i>Submit</button>
        <a href="/contacts-list"class="btn btn-warning"><i class="fas fa-undo"></i> Cancel</a>
      </form>



</div>

</main>



